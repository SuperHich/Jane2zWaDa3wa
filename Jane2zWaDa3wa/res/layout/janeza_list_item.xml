<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:layout_marginRight="35dp">

        <TextView
            android:id="@+id/txv_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txv_name"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/name"
            android:textColor="@color/color_green" />

        <TextView
            android:id="@+id/txv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/name"
            android:textColor="@color/color_beige" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_layout"
        android:gravity="right"
        android:layout_marginRight="35dp" >

        <TextView
            android:id="@+id/txv_gender_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txv_gender"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/gender"
            android:textColor="@color/color_green" />

        <TextView
            android:id="@+id/txv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/gender"
            android:textColor="@color/color_beige" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/txv_index"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@color/color_green"
        android:text="1"
        android:textColor="#fff"
        android:textSize="12sp"/>

</RelativeLayout>