<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_white_selector"
    android:minHeight="40dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txv_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txv_name"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/name"
        android:textColor="@color/color_green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txv_janeza_index"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/name"
        android:textColor="@color/color_beige"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txv_janeza_index"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@color/color_green"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="16sp" />

</RelativeLayout>